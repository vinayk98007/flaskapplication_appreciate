{
  "family": "ecs-loki-demo-task",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::877407756445:role/ecs-loki-demo-execution-role",
  "taskRoleArn": "arn:aws:iam::877407756445:role/ecs-loki-demo-task-role",
  "cpu": "512",
  "memory": "1024",
  "requiresCompatibilities": ["FARGATE"],
  "containerDefinitions": [
    {
      "name": "ecs-loki-demo",
      "image": "877407756445.dkr.ecr.ap-south-1.amazonaws.com/ecs-loki-demo-repo:latest",
      "portMappings": [
        { "containerPort": 5000, "protocol": "tcp" }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ecs-loki-demo",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "mountPoints": [
        {
          "sourceVolume": "varlog",
          "containerPath": "/var/log"
        }
      ]
    },
    {
      "name": "promtail",
      "image": "877407756445.dkr.ecr.ap-south-1.amazonaws.com/promtail-custom:latest",
      "essential": false,
      "mountPoints": [
        {
          "sourceVolume": "varlog",
          "containerPath": "/var/log"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/promtail",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "volumes": [
    { "name": "varlog" }
  ]
}
